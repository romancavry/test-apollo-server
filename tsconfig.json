{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src/",
    "paths": {
      "config": ["config"],
      "services": ["services"],
      "app": ["app"],
      "modules": ["modules"],
      "middlewares": ["middlewares"],
    }, 
    "typeRoots": ["./types", "./node_modules/@types"]
  } 
}
